{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "commonjs",
    "lib": [
      "es2020"
    ], 
    "rootDir": "./src", 
    "outDir": "./dist", 
    "strict": true, 
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true, 
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/tests/**/*.test.ts"
  ] 
}
